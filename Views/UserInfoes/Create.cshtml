<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $(".needsDatePicker").datepicker({
                dateFormat: "dd-mm-yy"
            });
            $(window).on('load', function () {

                $ajax({
                    url: '/UserInfoes/Create',
                    type: 'get'
                }).done(function (data) {
                    $('#modalBody').html(data);
                    $('#myModalLabel').html('Add Info')
                    $('#myModal').modal('show');
                }).fail(function (err) {
                    alert(err);
                });

            })

        });

    </script>

